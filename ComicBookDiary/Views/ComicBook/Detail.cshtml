@model ComicBookDiary.Models.ComicBook

@{
Layout = "~/Views/Shared/_Layout.cshtml";
ViewBag.Title = Model.DisplayText;
}
<h1>@ViewBag.SeriesTitle</h1>
<h2>Issue #@ViewBag.Number</h2>
<h5>Description:</h5>
<div>@Html.Raw(@ViewBag.DescriptionHtml)</div>

@if(Model.Artists.Length > 0)
{
   <h5>Artist</h5>
    <div>
        <ul>
            @foreach(var artist in Model.Artists)
            {
                <li>@artist.Name : @artist.Role</li>
            }
        </ul>
    </div>
}



